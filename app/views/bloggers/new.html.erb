<% if flash[:errors_array] %>
    <% flash[:errors_array].each do |error| %>
        <%= error %>
    <% end %>
<% end %>

<%= form_for @blogger do |f| %>
    <%= f.label :name %><br>
    <%= f.text_field :name %><br>
    <%= f.label :bio %><br>
    <%= f.text_area :bio %><br>
    <%= f.label :age %><br>
    <%= f.number_field :age, in: 1..120 %><br>
    <%= f.submit %>
<% end %>