<h1>Create Post</h1>

<% if flash[:errors_array] %>
    <% flash[:errors_array].each do |error| %>
        <%= error %>
    <% end %>
<% end %>

<%= form_for @post do |f| %>
<%= f.label :title %><br>
<%= f.text_field :title %><br>
<%= f.label :content %><br>
<%= f.text_area :content %><br>
<%= f.label "Blogger:" %><br>
<%= f.collection_select(:blogger_id, Blogger.all, :id, :name) %><br>
<%= f.label "Destination:"  %><br>
<%= f.collection_select(:destination_id, Destination.all, :id, :name) %><br>
<%= f.submit %>
<% end %>